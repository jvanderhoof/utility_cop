<p id="notice"><%= notice %></p>

<h1><%=link_to @app.name, app_path(@app) %> Environment Variables</h1>

<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_credentials.each do |app_credential| %>
      <tr>
        <td><%= app_credential.key %></td>
        <td><%= app_credential.text_value %></td>
        <td><%= link_to 'Edit', edit_app_credential_path(app_credential) %></td>
        <td><%= link_to 'Destroy', app_credential, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Environment Variable', new_app_credential_path(app_id: @app.id) %>
